<%= form_for @article   do |f|  %>
  <%= f.label :title  %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <%= f.label :content %>
  <div class="form-group ">
    <%= f.text_area :content, rows: 10, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

